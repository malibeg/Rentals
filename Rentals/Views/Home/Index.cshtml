@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Items</h1>

</div>

<div class="row">
    <div class="col-md-4">
        <h2>Rental items</h2>
        <p>
            <ul id="update-items" data-bind="foreach: items">
                <li>
                    <div>
                        <div class="input-prepend">Product ID</div> <span data-bind="text: $data.Id"></span>
                    </div>
                    <div>
                        <div class="input-prepend">Title</div>
                        <input type="text" data-bind="value: $data.Title" />
                    </div>
                    <div>
                        <div class="input-prepend">Description</div>
                        <input type="text" data-bind="value: $data.Description" />
                    </div>
                    <div>
                        <div class="input-prepend">RentalPrice ($)</div>
                        <input type="text" data-bind="value: $data.RentalPrice" />
                    </div>
                    <div>
                        <input class="btn btn-default" type="button" value="Update" data-bind="click: $root.update" />
                        <input class="btn btn-default" type="button" value="Delete Item" data-bind="click: $root.remove" />
                    </div>
                </li>
            </ul>

        </p>
    </div>
    <div class="col-md-4">
        <h2>Get more libraries</h2>
        <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Web Hosting</h2>
        <p>You can easily find a web hosting company that offers the right mix of features and price for your applications.</p>
        <p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/konckout")
}